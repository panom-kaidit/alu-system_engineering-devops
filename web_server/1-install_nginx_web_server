#!/usr/bin/env bash
# Installs and configures Nginx to serve a page containing 'Holberton School' on port 80.
set -e

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Create custom response page
echo "Holberton School for the win!" > /var/www/html/index.html

# Make sure nginx is running (without using systemctl)
service nginx start